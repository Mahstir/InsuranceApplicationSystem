@{
    ViewBag.Title = "MembershipTypes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Membership Types</h2>

<table id="memberships" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Annual Fee</th>
            <th>Discount Rate</th>
            <th>Benefit</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#memberships").DataTable({
                ajax: {
                    url: "/api/membershiptypes",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, membership) {
                            return "<a href='/membershiptypes/edit/" + membership.id + " '>" + membership.name + "</a>";
                        }
                    },
                    {
                        data: "annualFee"
                    },
                    {
                        data: "discountRate"
                    },
                    {
                        data: "benefit"
                    }
                ]
            });
        });
    </script>
}
